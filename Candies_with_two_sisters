import java.util.*;
import java.lang.Math;
public class Candies{
    public static void main(String args[]){
        Scanner s=new Scanner(System.in);
        System.out.println("enter n:");
        int n=s.nextInt();
        while(n>0){
           int c=s.nextInt();
           int p=((c-1)/2);
           System.out.println((int)(p));
           n-=1;
        }
    }
}
